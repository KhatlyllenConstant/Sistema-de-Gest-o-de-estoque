<script>
    // Script para capturar os dados do formulário
    document.getElementById('cadastroForm').addEventListener('submit', function(event) {
        event.preventDefault();
        
        // Capturar os valores dos campos
        let nomeFornecedor = document.getElementById('nomeFornecedor').value;
        let dataEmissao = document.getElementById('dataEmissao').value;
        let previsaoEntrega = document.getElementById('previsaoEntrega').value;
        let dataRecebimento = document.getElementById('dataRecebimento').value;
        let condicoesPagamento = document.getElementById('condicoesPagamento').value;
        let devolucao = document.getElementById('devolucao').value;
        let valorTotal = document.getElementById('valorTotal').value;
        let valorComDesconto = document.getElementById('valorComDesconto').value;
        
        // Exibir os valores no console (pode ser substituído por outra lógica de processamento)
        console.log('Nome do Fornecedor:', nomeFornecedor);
        console.log('Data da Emissão:', dataEmissao);
        console.log('Previsão de Entrega:', previsaoEntrega);
        console.log('Data de Recebimento:', dataRecebimento);
        console.log('Condições de Pagamento:', condicoesPagamento);
        console.log('Devolução:', devolucao);
        console.log('Valor Total:', valorTotal);
        console.log('Valor com Desconto:', valorComDesconto);
        
        // Aqui você pode adicionar lógica para enviar os dados para um servidor, armazenar localmente, etc.
        
        // Limpar o formulário após o envio (opcional)
        this.reset();
    });
</script>

